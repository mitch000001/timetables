{{ define "header" }}
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
        <a class="navbar-brand" href="/">Arbeitszeitkonten</a>
    </div>
    <div class="collapse navbar-collapse">
      {{ if .LoggedIn }}
      <ul class="nav navbar-nav">
        <li{{if (startsWith .RequestPath "/timeframes")}} class="active"{{end}}><a href="/timeframes">Abrechnungszeiträume</a></li>
        <li{{if (startsWith .RequestPath "/plan_years")}} class="active"{{end}}><a href="/plan_years">Planungsjahre</a></li>
        <li{{if (startsWith .RequestPath "/plan_items")}} class="active"{{end}}><a href="/plan_items">Planungszeiträume</a></li>
      </ul>
      {{end}}
      <ul class="nav navbar-nav navbar-right">
        {{ if .LoggedIn }}
        <li>
          <p class="navbar-text">
            Eingeloggt als <a href="/users/{{.CurrentUser.Email}}" class="navbar-link">{{ .CurrentUser }}</a>
          </p>
        </li>
        <li>
          <a href="/logout">Logout</a>
        </li>
        {{ else }}
        <li>
          <a href="/login">Login</a>
        </li>
        {{end}}
      </ul>
    </div>
  </div>
</nav>
<div class="errors" style="clear:right; padding: 5px;">
{{ range $err := .Errors }}<div class="bg-danger" style="padding: 5px;">{{if $.Debug}}{{ printf "%T: %s" $err $err.Error }}{{else}}{{$err.Error}}{{end}}</div>{{ end }}
</div>
{{ end }}
